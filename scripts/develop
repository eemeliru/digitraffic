#!/usr/bin/env bash

set -e

cd "$(dirname "$0")/.."

# Create config dir if not present
if [[ ! -d "${PWD}/config" ]]; then
    mkdir -p "${PWD}/config"
    hass --config "${PWD}/config" --script ensure_config
fi

# Create custom_components directory in config if it doesn't exist
mkdir -p "${PWD}/config/custom_components"

# Create a symlink to our integration in config/custom_components
# This allows HACS and other integrations to coexist with our development integration
if [[ ! -L "${PWD}/config/custom_components/digitraffic" ]]; then
    ln -sf "${PWD}/custom_components/digitraffic" "${PWD}/config/custom_components/digitraffic"
    echo "Created symlink: config/custom_components/digitraffic -> custom_components/digitraffic"
fi

# Start Home Assistant
hass --config "${PWD}/config" --debug
